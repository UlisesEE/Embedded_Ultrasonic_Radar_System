#include <Servo.h>
#include "SR04.h"

const int buzzerPin = 8;
const int servoPin = 9; 
const int triggerPin = 12;
const int echoPin = 11;

Servo myservo;
SR04 mySensor = SR04(echoPin, triggerPin);

long distance;

int printDistance(int i, int distance)
{
    Serial.print(i);
    Serial.print(",");
    Serial.println(distance); // newline at the end
}


void setup()
{
  // put your setup code here, to run once:
  pinMode(buzzerPin, OUTPUT);
  myservo.attach(servoPin);
  Serial.begin(9600);
}

void loop()
{
  // put your main code here, to run repeatedly:
  for(int i = 0; i <= 180; i++)
  {
    myservo.write(i);
    //delay(10));
    distance = mySensor.Distance();
    printDistance(i, distance);

    if(distance < 40)
    {
      int beepInterval = map(distance, 40, 0, 50, 1);
      beepBuzzer(beepInterval);
    }
  }  
  for(int i = 180; i >= 0; i--)
  {
    myservo.write(i);
    //delay(10);
    distance = mySensor.Distance();
    printDistance(i, distance);

    if(distance < 40)
    {
      int beepInterval = map(distance, 40, 0, 50, 1);
      beepBuzzer(beepInterval);
    }
  }
}

void beepBuzzer(int beepInterval)
{
  digitalWrite(buzzerPin, HIGH);
  delay(beepInterval);//keep playing sound for 5 seconds.
  digitalWrite(buzzerPin, LOW);
  delay(1);
}

